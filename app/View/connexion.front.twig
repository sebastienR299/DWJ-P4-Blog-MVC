{% extends 'template.front.twig' %}

{% block title %}<title>Connexion</title>{% endblock %}

{% block content %}

<form method="post" action="?p=signIn" class="mx-auto col-lg-4 col-sm-8 mt-5" autocomplete="off">
    <div class="form-group">
        <label for="email" class="ml-4">Email</label>
        <input type="email" class="form-control form-control-lg rounded-pill" name="email" id="email" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="password" class="ml-4">Mot de passe</label>
        <input type="password" class="form-control form-control-lg rounded-pill" name="password" id="password">
    </div>
    <button type="submit" class="btn btn-primary btn-lg d-block mx-auto mt-4 rounded-pill">Connexion</button>
</form>

{% endblock %}