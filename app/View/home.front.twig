{% extends 'template.front.twig' %}

{% block title %}<title>Accueil</title>{% endblock %}

{% block content %}

        <h1 class="text-center p-4">Publications</h1>

    {% for article in articles %}

        <div class="bloc_article shadow">
        <img src="/images/uploads/{{article.pictureAlt}}" alt="" class="img-profil"/>
            <div class="items_article">
                <h4 class="title_article"><a href="?p=article&id={{article.id}}">{{ article.title }}</a></h4>
                <p class="p_article">{{ article.content|u.truncate(300, '...')|raw }}</p>
            </div>
            <div class="btn_article">
            {% for user in users %}
                <p>{{user.firstName}} {{user.lastName}}</p>
            {% endfor %}
                <p>{{article.createdAt | date('d-m-Y')}}</p>
            </div>
        </div>

    {% endfor %}

    {% if returnMessage is defined %}

    <div class="alert alert-{{colorMessage}}" role="alert">
        {{returnMessage}}
    </div>

    {% endif %}

    <nav aria-label="...">
        <ul class="pagination pagination-lg justify-content-center">
            {% for i in 1..nbPages %}
            <li class="page-item {% if i == page %}active{% endif %}"><a class="page-link" href="?p=home&page={{i}}">{{i}}</a></li>
            {% endfor %}
        </ul>
    </nav>

{% endblock %}