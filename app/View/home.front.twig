{% extends 'template.front.twig' %}

{% block title %}<title>Accueil</title>{% endblock %}

{% block content %}

    <div class="container">

        <h1 class="text-center p-4">Publications</h1>

    {% for article in articles %}

        <h4><a href="?p=article&id={{article.id}}">{{ article.title }}</a></h4>
        <p>{{ article.content|u.truncate(400, '...') }}</p>

    {% endfor %}

    </div>

{% endblock %}